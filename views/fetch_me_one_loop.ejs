<% layout('layout_main') -%>
<% stylesheet('../stylesheets/style.css') -%>
<% script('../javascripts/whisper_like_interact.js') -%>

<div class="container">
    <div class="row">
        <div class="col-xl-2">
        </div>

        <div class="col-xl-8">
            <h1>User: <%= email %></h1><br>
        </div>

        <div class="col-xl-2">
        </div>
    </div>

    <div class="row">
        <div class="col-xl main">
            <div class="row">
                <div class="col-xl-6">
                    <p class="info">Name: <%= first_name %> <%= last_name %></p>
                    <p class="info">Gender: <%= gender %></p>
                    <p class="info">Age: <%= age %></p>
                    <p class="info">Country: <%= country %></p>
                    <p class="info">City: <%= city %></p>
                    <p class="info">Job: <%= job %></p>
                    <p class="info">Sexual Orientation: <%= sexual_orientation %></p>
                    <p class="info">Personal Description: </p>
                    <p><%= personal_description %></p>
                    <p class="info">Facebook Link: </p>
                    <p><%= facebook_link %></p>
                </div>

                <div class="col-xl-6">
                    <p class="info">Showcase photo:</p>
                    <img src="data:<%= showcase_photo_content_type %>;base64,<%= showcase_photo %>"
                         class="showcase_photo" alt="Unknown error"><br><br>

                    <p class="info">Send a message, hit a like, or start a chat!</p>
                    <div class="row">
                        <div class="col-xl-8">
                            <textarea rows="2" id="whisper_message"
                                      placeholder="Hi! Would you like a cup of tea?" required ></textarea>
                        </div>

                        <div class="col-xl-2">
                            <input class="interact" type="button" id="whisper_button" value="ðŸ’Œ">
                        </div>

                        <div class="col-xl-2">
                            <input class="interact" type="button" id="like_button" value="<%= like_icon %>">
                        </div>
                    </div><br>
                </div>
            </div>

            <div class="row">
                <div class="col-xl-2">
                </div>

                <div class="col-xl-4">
                    <input type="button" onclick="window.open('/fetch_me_one_gender', '_self')" value="Return">
                </div>

                <div class="col-xl-4">
                    <input type="button" onclick="window.open('/fetch_me_one_loop', '_self')" value="Next One">
                </div>

                <div class="col-xl-2">
                </div>
            </div>
        </div>
    </div>
</div>
