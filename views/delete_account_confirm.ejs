<% layout('layout_main') -%>
<% stylesheet('../stylesheets/style.css') -%>

<div class="container" >
    <div class="row">
        <div class="col-xl-3">
        </div>

        <div class="col-xl-6 main">
            <form action="javascript:history.back()" method="get">
                <h1>Delete account confirm</h1>
                <p class="warning">*Warning* The process is permanent and CANNOT be recovered!
                    Are you sure you want to delete your account and all data?</p>
                <input type="submit" value="Cancel"><br>
            </form>

            <form action="/delete_account" method="get">
                <input class="delete_account" type="submit" value="Delete anyway">
            </form>
        </div>

        <div class="col-xl-3">
        </div>
    </div>
</div>
