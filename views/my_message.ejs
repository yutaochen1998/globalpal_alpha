<% layout('layout_main') -%>
<% stylesheet('../stylesheets/style.css') -%>

<div class="container" >
    <div class="row">
        <div class="col-xl-3">
        </div>

        <div class="col-xl-6 main">
            <h1>My Message</h1>
            <div class="row">
                <div class="col-xl-6">
                    <input class="delete" type="button" onclick="window.open('/clear_message', '_self')" value="Clear Message">
                </div>

                <div class="col-xl-6">
                    <p>Message box will only store the last 30 messages</p>
                </div>
            </div>

            <div id="message_window"><%- message_list -%></div>
        </div>

        <div class="col-xl-3">
        </div>
    </div>
</div>
