<% layout('layout_general') -%>
<% stylesheet('../stylesheets/style.css') -%>

<!--top left profile photo and logout button-->
<table style="width:1px">
    <tr>
        <th>
            <img src="data:<%= profile_photo_content_type %>;base64,<%= profile_photo %>" class="profile_photo_top_left" alt="Unknown error">
        </th>
        <th>
            <form action="/logout" method="get">
                <input type="submit" id="logout"
                       value="Log Out" />
            </form>
        </th>
    </tr>
</table>

<div class="container">
    <div class="row">
        <div class="col-xl-3">
        </div>
        <div class="col-xl-6 main">
            <h1><%= title %></h1>
            <p class="message"><%= message %></p>

            <form action="<%= button_action %>" method="get">
                <input type="submit" value="<%= button_value %>" />
            </form>
        </div>
        <div class="col-xl-3">
        </div>
    </div>
</div>