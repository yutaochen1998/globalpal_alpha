<% layout('layout_general') -%>
<% stylesheet('../stylesheets/style.css') -%>

<!--top left profile photo and logout button-->
<table style="width:1px">
    <tr>
        <th>
            <img src="data:<%= profile_photo_content_type %>;base64,<%= profile_photo %>" class="profile_photo_top_left">
        </th>
        <th>
            <form action="/logout" method="get">
                <input type="submit" id="logout"
                       value="Log Out" />
            </form>
        </th>
    </tr>
</table>

<div class="container" >
    <div class="row">
        <div class="col-xl-3">
        </div>

        <div class="col-xl-6 main">
            <form action="/change_password" method="post">
                <h1>Change password</h1>
                <label for="password_change">New password</label>
                <input class="box" type="password" name="password_change"
                       placeholder="Enter new password" required /><br>

                <input type="submit" value="Commit"><br>
            </form>

            <form action="javascript:history.back()" method="get">
                <input type="submit" value="Return">
            </form>
        </div>

        <div class="col-xl-3">
        </div>
    </div>
</div>
