<% layout('layout_main') -%>
<% stylesheet('../stylesheets/style.css') -%>

<div class="container" >
    <div class="row">
        <div class="col-xl-3">
        </div>

        <div class="col-xl-6 main">
            <form action="/change_password" method="post">
                <h1>Change password</h1>
                <label for="password_change">New password</label>
                <input class="box" type="password" name="password_change"
                       id="password_change" placeholder="Enter new password" required /><br>

                <input type="submit" value="Submit"><br>
            </form>

            <input type="button" onclick="history.back()" value="Cancel">
        </div>

        <div class="col-xl-3">
        </div>
    </div>
</div>
