<% layout('layout_general') -%>
<% stylesheet('../stylesheets/style.css') -%>

<!--top left profile photo and logout button-->
<table style="width:1px">
    <tr>
        <th>
            <img src="data:<%= profile_photo_content_type %>;base64,<%= profile_photo %>" class="profile_photo_top_left" alt="Unknown error">
        </th>
        <th>
            <form action="/logout" method="get">
                <input type="submit" id="logout"
                       value="Log Out" />
            </form>
        </th>
    </tr>
</table>

<div class="container">
    <div class="row">
        <div class="col-xl-2">
        </div>

        <div class="col-xl-8">
            <h1>My Profile</h1><br>
        </div>

        <div class="col-xl-2">
        </div>
    </div>

    <div class="row">
        <div class="col-xl main">
            <div class="row">
                <div class="col-xl-6">
                    <p class="info">Name: <%= first_name %> <%= last_name %></p>
                    <p class="info">Gender: <%= gender %></p>
                    <p class="info">Age: <%= age %></p>
                    <p class="info">Birthday: <%= birthday %></p>
                    <p class="info">Country: <%= country %></p>
                    <p class="info">City: <%= city %></p>
                    <p class="info">Job: <%= job %></p>
                    <p class="info">Sexual Orientation: <%= sexual_orientation %></p>
                    <p class="info">Phone: <%= phone %></p>
                    <p class="info">Personal Description: </p>
                    <p><%= personal_description %></p>
                    <p class="info">Facebook Link: </p>
                    <p><%= facebook_link %></p>
                </div>

                <div class="col-xl-6">
                    <p class="info">Profile photo:</p>
                    <img src="data:<%= profile_photo_content_type %>;base64,<%= profile_photo %>"
                         class="profile_photo" alt="Unknown error"><br><br>

                    <p class="info">Showcase photo:</p>
                    <img src="data:<%= showcase_photo_content_type %>;base64,<%= showcase_photo %>"
                         class="showcase_photo" alt="Unknown error">
                </div>
            </div>

            <div class="row">
                <div class="col-xl-2">
                </div>

                <div class="col-xl-4">
                    <form action="/personal_info_edit_page" method="get">
                        <input type="submit" value="Edit">
                    </form>
                </div>

                <div class="col-xl-4">
                    <form action="/start_friendship" method="get">
                        <input type="submit" value="Return">
                    </form>
                </div>

                <div class="col-xl-2">
                </div>
            </div>
        </div>
    </div>
</div>
